<%- include('../partials/header') %>

  <h1>Skills</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Item</th>
        <th>Mastered?</th>
      </tr>
    </thead>
    <tbody>
      <% skills.forEach(function(t) { %>
        <tr>
          <td><a href="/skills/<%= t.id %>"><%= t.skill %></a></td>
          <td><%= t.expert ? 'Definitely' : 'Not quite' %></td>
          <td>
            <form action="/skills/<%= t.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">X</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>


 